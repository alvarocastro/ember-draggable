{
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/alvarocastro/ember-draggable-modifiers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --filter ember-draggable-modifiers build",
    "build:docs": "pnpm --filter test-app build",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpm --filter '*' lint",
    "lint:fix": "pnpm --filter '*' lint:fix",
    "prepare": "pnpm build",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "pnpm --filter ember-draggable-modifiers start --no-watch.clearScreen",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter '*' test:ember"
  },
  "devDependencies": {
    "@release-it-plugins/workspaces": "^4.2.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "prettier-plugin-ember-template-tag": "^1.1.0",
    "release-it": "^17.4.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "release-it": {
    "hooks": {
      "before:init": "cp README.md LICENSE.md packages/ember-draggable-modifiers/",
      "after:bump": "pnpm install"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "header": "# Changelog",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "ğŸš€ Enhancements"
            },
            {
              "type": "fix",
              "section": "ğŸ Fixes"
            },
            {
              "type": "chore",
              "section": "ğŸ  Internal"
            },
            {
              "type": "docs",
              "section": "ğŸ“ Documentation"
            }
          ]
        }
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "packages/ember-draggable-modifiers"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  }
}
