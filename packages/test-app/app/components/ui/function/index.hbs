<section class="mb-5">
  <h1 class="font-monospace fs-5 mb-3">{{@title}}</h1>

  <p>{{@description}}</p>

  {{yield}}

  {{#if @params}}
    <Ui::Params as |p|>
      {{#each @params as |param|}}
        <p.param
          @name={{param.name}}
          @type={{param.type}}
          @default={{param.default}}
          @required={{param.required}}
          @description={{param.description}}
        />
      {{/each}}
    </Ui::Params>
  {{/if}}
</section>